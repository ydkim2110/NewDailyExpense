<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reachfree.dailyexpense">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyExpense">
        <activity android:name=".ui.settings.SettingsActivity"></activity>
        <activity android:name=".ui.budget.ExpenseBudgetActivity" />
        <activity android:name=".ui.calendar.CalendarActivity" />
        <activity android:name=".ui.setup.SetupActivity" />
        <activity
            android:name=".ui.base.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.transaction.TransactionActivity" />
        <activity android:name=".ui.dashboard.DashboardActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>