<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyExpense" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>

        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="android:dialogTheme">@style/AlertDialogStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="NavigationTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">@color/tabColor</item>
        <item name="fontFamily"></item>
        <item name="tabIndicatorColor">@color/tabColor</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppearance</item>
    </style>

    <style name="NavigationTitle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
<!--        <item name="fontFamily"></item>-->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NavigationSubTitle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
<!--        <item name="fontFamily">@font/ubuntu_medium</item>-->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.DailyExpense">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#212D3B</item>
        <item name="buttonBarNegativeButtonStyle">@android:color/holo_red_dark</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/colorExpense</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily"></item>
    </style>

    <style name="DialogBodyText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily"></item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily"></item>
    </style>

    <style name="ChipTextBold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily"></item>
    </style>

    <style name="ChipTextRegular" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily"></item>
    </style>

    <style name="TextCardTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectTypeBottomSheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="InputTextTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily"></item>
    </style>

    <style name="TextFieldHintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily"></item>
    </style>

    <style name="TextFieldHelperTextTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily"></item>
    </style>

    <style name="TextFieldErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily"></item>
    </style>

    <style name="PaymentToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/toggle_text_color_state_list</item>
        <item name="strokeColor">@color/orange</item>
        <item name="android:minHeight">42dp</item>
        <item name="backgroundTint">@color/toggle_background_state_list</item>
    </style>

    <style name="TransactionToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/toggle_text_color_state_list</item>
        <item name="strokeColor">@color/orange</item>
        <item name="android:minHeight">42dp</item>
        <item name="backgroundTint">@color/toggle_background_state_list</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/colorCardBackground</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <!-- text color for the button -->
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <!-- text color for the button -->
        <item name="android:textColor">@color/colorTextPrimary</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
</resources>