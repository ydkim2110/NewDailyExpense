<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <ripple android:color="#C1C1C1" >
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorCircleProgressBarBackground" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.6"
            android:thickness="8dp"
            android:useLevel="false">

            <solid android:color="@color/colorProgressBarTintBackground" />

        </shape>
    </item>

</layer-list>
